<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
</head>
<body>
    <div style="padding: 2%;text-align: center;" class="searchbox">
        <label for="Search for name or location"><b>Search</b></label>
        <input type="text" size="40" id="myinput" placeholder="Search for name or location" class="searchbox1" onkeyup="search()">
      </div>
      <div style="padding-left: 14%; padding-right: 14%;">
      <div style="background-color: #F2EDD7;" id="table">
    <% users.forEach((user,index)=>{%>
        <%var str1 = user.name; %>
        <%var str2 = user.location; %>
        <%var res = str1.concat(str2); %>    
        <div style="padding: 0.3%;" id="<%=res%>">
            <div>
        <h3 style="display: inline-block">Name : </h3>
        <h3 style="display: inline-block" class="ul"><%= user.name %></h3>
        </div>
        <h3 style="display: inline-block">location:</h3>
        <h3 style="display: inline-block" class="uloc"><%= user.location %></h3>
        <hr style="border: 1px solid blue;
        ">
    </div>
        <% }) %>
    </div>
    </div>
<script>
    const search = ()=>{
       let filter = document.getElementById("myinput").value.toUpperCase();
        let table = document.getElementById("table");
        let tr = table.getElementsByClassName('ul');
        let tl = table.getElementsByClassName('uloc');
        for(var i = 0; i<tr.length; i++){
            var str3 = tr[i].textContent;
            var str4 = tl[i].textContent;
            var textv = str3.concat(str4);
            
                
                if(textv.toUpperCase().indexOf(filter)>-1){
                    document.getElementById(textv).style.display = "";
                }
                else{
                    document.getElementById(textv).style.display = "none"
                }
            
        }
    }
</script>
</body>
</html>